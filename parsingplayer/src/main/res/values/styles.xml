<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MediaButton">
        <item name="android:background">@null</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="MediaButton.Play">
        <item name="android:src">@drawable/ic_portrait_play</item>
    </style>

    <style name="MediaButton.FUllscreen">
        <item name="android:src">@drawable/ic_portrait_fullscreen</item>
    </style>

    <style name="MediaQuality">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/quality_text_bgd</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="MediaQuality.Text" parent="MediaQuality">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dim_foreground_dark</item>
    </style>
</resources>